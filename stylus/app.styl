
@media (max-width: 991px) {
  .app-content{
    height:300px;
  }
}
@media (min-width: 992px) {
  .app-content{
    height:600px;
  }
}

.container-fluid{
  height:100%;

  .col-md-4{
    height:100%;
  }
  .arbys {
    background-color: red;
    position: relative;
    .arbys-bg-img {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-image: url('../../images/Selfie.jpg');
      transition: opacity .3s;

    }
    .arbys-content {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
    }
  }
  .arbys:hover .arbys-bg-img{
    opacity: .55;

  }
  .subway{
    background-color: green;
    position: relative;
    .subway-bg-img{
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-image: url('../../images/selfie-2.jpg');
      transition: opacity .3s;
    }
    .subway-content{
      display: table-cell;
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      text-decoration: none;
      text-align: center;
      vertical-align:middle;

    }
  }
  .subway:hover .subway-bg-img{
    opacity: .55;
  }
  .gasngo{
    background-color: white;
    position: relative;
    .gasngo-bg-img{
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-image: url('../../images/Test-Image.png');
      transition: opacity .3s;
    }
    .gasngo-content{
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      text-decoration: none;
    }
  }
  .gasngo:hover .gasngo-bg-img{
    opacity: .55;
  }
}

.app-content{
  position: relative;
}

.slogan a{
  text-decoration: none !important;
  color:red !important;
}